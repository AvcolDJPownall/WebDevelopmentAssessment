@page
@model WebDevelopmentAssessment.Pages.Pictures.CreateModel

@{
    ViewData["Title"] = "Submit";
}

<h1>Submit new image</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Picture.Title" class="control-label"></label>
                <input asp-for="Picture.Title" class="form-control" />
                <span asp-validation-for="Picture.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Image URL</label>
                <input asp-for="Picture.ImageURL" class="form-control" />
                <span asp-validation-for="Picture.ImageURL" class="text-danger"></span>
            </div>
            <div class="sha-group">
                <h3 class="control-label">Author</h3>
                @foreach (var user in Model.AllUsers)
                {
                    <div><input type="radio" value="@user.UserID" asp-for="@Model.SelectedUserID" id="@user.UserID" /><label for="@user.UserID">@user.UserName</label></div>
                }
                <div class="form-group">
                    <h3 class="control-label">Tag</h3>
                    @foreach (var item in Model.AllTags)
                    {
                        <div><input type="radio" value="@item.TagID" asp-for="@Model.SelectedTagID" id="@item.TagID" /><label for="@item.TagID">@item.Text</label></div>
                    }
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
    
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
