@page
@model WebDevelopmentAssessment.Pages.Pictures.IndexModel

@{
    ViewData["Title"] = "Index";
}

<head>
    <title>Browse Images"</title>
    <style type="text/css">
        img {
            border-radius: 50%;
        }
    </style>
</head>

<h1>Browse</h1>

<p>
    <a asp-page="Create">Submit an image</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Found @Model.Picture.Count images
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Picture) {
        <tr>
            <td>
                <img src="@item.ImageURL" width="128" height="128">
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
