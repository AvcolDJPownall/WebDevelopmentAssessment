@page
@model WebDevelopmentAssessment.Pages.Pictures.IndexModel

@{
    ViewData["Title"] = "Browse Images";
}

<head>
    <style type="text/css">
        img {
            border-radius: 50%;
        }

        .imgtitle {
           font-style: oblique;
           text-align: center;
        }
    </style>
</head>

<h1>Browse</h1>

<p>
    <a asp-page="Create">Submit an image</a>
    <a asp-page="/Tags/Index">Browse Tags</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Found @Model.Picture.Count images
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Picture) {
        <tr>
            <td>
                <div class="imgtitle">
                    <b>@item.Title</b>
                </div>
                <img src="@item.ImageURL" width="128" height="128">
            </td>
            <td valign="bottom">
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
