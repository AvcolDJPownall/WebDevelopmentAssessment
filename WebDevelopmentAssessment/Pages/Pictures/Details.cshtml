@page
@model WebDevelopmentAssessment.Pages.Pictures.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Picture</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture.Title)
        <dt class="col-sm-2">
            <label class="control-label">Author</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedAuthor.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.ImageURL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture.ImageURL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Picture.ImageURL" height="256" width="256">
        </dd>
        <dt class="col-sm-2">
            <p>Tag</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedTag.Text)
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Picture.PictureID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
